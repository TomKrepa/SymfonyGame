{% extends 'base.html.twig' %}

{% block title %}Gestion des Jeux{% endblock %}

{% block body %}

<h1>Gestion des jeux</h1>

    <div class="container mt-4">
        <h2>Catalogue</h2>
        
        {# MESSAGE #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for jeu in jeux %}
                <tr>
                    <td><img src="{{ jeu.image }}" style="width: 300px; height: 150px"></td>
                    <td>{{ jeu.titre }}</td>
                    <td>{{ jeu.details }}</td>
                    <td>{{ jeu.prix }} â‚¬</td>
                    <td>
                        {# EDITER le jeu #}
                        <a href="{{ path('admin_game_edit', {'id': jeu.id}) }}" class="btn btn-secondary"><i class="fas fa-edit"></i></a><br><br>

                        {# SUPPRIMER le jeu #}
                        <form method="POST" action="{{ path('admin_game_delete', {'id': jeu.id}) }}" style="display: inline-block"
                            onsubmit="return confirm('Voulez-vous vraiment supprimer ce jeu ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ jeu.id) }}">
                            <button class="btn btn-danger"><i class="fas fa-trash"></i></button><p>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {# CREER un jeu #}
        <div class="class-right">
            <a href="{{ path('admin_game_create') }}" class="btn btn-primary">Ajouter un nouveau jeu</a>
        </div>

    </div> 

{% endblock %}
