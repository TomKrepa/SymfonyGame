{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}

    <div class="container mt-4">

        <h1>Gérer les utilisateurs</h1>

        {# MESSAGE #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Pseudo</th>
                    <th>Date de naissance</th>
                    <th>Rôle</th>
                    <th>Mot de passe</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.pseudo }}</td>
                    <td>{{ user.DateOfBirth }}</td>
                    <td>
                        {% if user.roles[0] == "ROLE_ADMIN" %}
                            ADMINISTRATEUR
                        {% else %}
                            UTILISATEUR
                        {% endif %}
                    </td>
                    {# Afficher seulement les 10 premiers caractères du hash #}
                    <td>{{ user.password|length > 10 ? user.password|striptags|slice(0, 10) ~ '...' : user.password }}</td>
                    <td>
                        {# EDITER l'utilisateur #}
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-secondary">Editer</a>

                        {# SUPPRIMER l'utilisateur #}
                        <form method="POST" action="{{ path('admin_user_delete', {'id': user.id}) }}" style="display: inline-block"
                            onsubmit="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                            <button class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {# CREER un utilisateur #}
        <div class="class-right">
            <a href="{{ path('admin_user_create') }}" class="btn btn-primary">Ajouter un nouvel utilisateur</a>
        </div>

    </div> 

{% endblock %}