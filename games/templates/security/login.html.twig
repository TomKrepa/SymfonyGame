{% extends 'base.html.twig' %}

{% block title %}Formulaire de connexion{% endblock %}

{% block body %}

    <h1>Connexion</h1>

    {# MESSAGE APRES INSCRIPTION #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% if error %}
        <div class="alert alert-danger">
            Erreur d'authentification : {{ error.messageKey }}
        </div>
    {% endif %}

    {# FORMULAIRE #}
    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input placeholder="Email" required name="_username" type="text" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe" required name="_password" type="password" class="form-control">
        </div>
        <div class="form-group">
            <a href="{{ path('security_registration') }}">Vous n'avez pas de compte ? Inscrivez-vous</a><br><br>
            <button type="submit" class="btn btn-success">Connexion !</button>
         </div>    
    </form>

{% endblock %}