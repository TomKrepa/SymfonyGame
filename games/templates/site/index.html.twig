{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}

<div class="container" style="margin: 10px; display: flex; justify-content: space-between; flex-wrap: wrap">
{% for jeu in jeux %}
    <div class="game_item" style="flex: 0 0 30%; margin-bottom: 80px; margin-right: 80px">
        <h2>{{ jeu.titre }}</h2>
            <div class="metadata">Publié le {{ jeu.CreatedAt | date("m/d/Y", "Europe/Paris") }} dans la catégorie Manga</div>
            <img src="{{ jeu.image }}" alt="" style="width: 300px; height: 150px">
            <div class="content">
            {{ jeu.details }}
            <br><br>
            <p>Prix : {{ jeu.prix }}€</p>
            <a href="{{ path('game_show', {'id': jeu.id}) }}" class="btn btn-primary" style="float: left">Voir le jeu</a>
        </div>
    </div>
{% endfor %}
</div>

{% endblock %}
