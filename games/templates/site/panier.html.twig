{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier</h1>

    {% if items | length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Image</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.jeux.titre }}</td>
                        <td><img src="{{ item.jeux.image }}" alt="" style="width: 200px; height: 100px"></td>
                        <td>{{ item.jeux.prix }}  €</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.jeux.prix * item.quantity }} €</td>
                        <td>
                            <a href="{{ path('panier_remove', {'id': item.jeux.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total :</td>
                    <td>{{ total }} €</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
    {% else %}
        <p>Panier vide...</p>
    {% endif %}


{% endblock %}