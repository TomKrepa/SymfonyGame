{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

<h1>Panier</h1>

    <div class="container mt-4">
        <h2>Liste de vos produits</h2>
        
            {% if items | length > 0 %}
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Titre</th>
                            <th>Prix</th>
                            <th>Quantité</th>
                            <th>Total</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                            <tr>
                                <td><img src="{{ item.jeux.image }}"></td>
                                <td>{{ item.jeux.titre }}</td>
                                <td>{{ item.jeux.prix }}  €</td>
                                <td>{{ item.quantity }}</td>
                                <td>{{ item.jeux.prix * item.quantity }} €</td>
                                <td>
                                    <a href="{{ path('panier_remove', {'id': item.jeux.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-right">Total :</td>
                            <td>{{ total }} €</td>
                            <td><a href="" class="btn btn-primary">Payer</a></td>
                        </tr>
                    </tfoot>
                </table>
            {% else %}
                <p>Votre panier est vide... Allez sur le<a href="{{path('games')}}"> catalogue </a>pour ajouter des produits</p>
            {% endif %}
        </div>

{% endblock %}